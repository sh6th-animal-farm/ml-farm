<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.animalfarm.mlf.domain.user.UserRepository">
	
	<select id="findByEmail" resultType="com.animalfarm.mlf.domain.user.dto.UserDTO">
		SELECT
			user_id    AS userId,
			email,
			password,
			user_name  AS userName,
			role
		FROM users
		WHERE email = #{email}
	</select>

</mapper>